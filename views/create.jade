extends layout

block content
    form(action="create", method="POST")
        .form-group
            label(for="name") Name
            input#name.form-control(name="name", type="text")
        .form-group
            label(for='zipCode') ZipCode
            input#zipCode.form-control(name="zipCode", type="number")
        .form-group
            label(for='neighborhood') Neighborhood
            input#neighborhood.form-control(name="nieghborhood", type="text")
        .form-group
            label(for='councilDistrict') Council District
            input#councilDistrict.form-control(name="councilDistrict", type="number", step="1")
        .form-group
            label(for='location') Location
            input#location.form-control(name="location", type="text")
        .form-group
            .btn-group
                button.btn.btn-primary(type="submit") Create
                a(href="/")
                    button.btn.btn-danger(type="button") Cancel