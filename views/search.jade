extends layout

block content
    
    ul.nav(style='margin-top: 80px').navbar-dark.bg-dark
    h1 Search Results
    table.table
        thead
        th Name
        th ZipCode
        th Neighborhood
        th CouncilDistrict
        th Location
        th Score
        th
        tbody
        each restaurant in restaurants
            tr
                td #{restaurant.name}
                td #{restaurant.zipCode}
                td #{restaurant.neighborhood}
                td #{restaurant.councilDistrict}
                td #{restaurant.location}
                td #{restaurant._score}
                td
                    a(href='/edit/#{restaurant._id}') 🖊️
                    a(href='/delete/#{restaurant._id}') 🗑️